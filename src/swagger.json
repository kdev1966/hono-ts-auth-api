{
  "openapi": "3.0.0",
  "info": {
    "title": "Hono API Auth",
    "version": "1.0.0",
    "description": "API d'authentification avec Hono, Prisma et PostgreSQL"
  },
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Inscription d'un utilisateur",
        "requestBody": {
          "description": "Données d'inscription",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Utilisateur créé"
          },
          "400": {
            "description": "Erreur de validation"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Connexion d'un utilisateur",
        "requestBody": {
          "description": "Identifiants de connexion",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token JWT renvoyé"
          },
          "401": {
            "description": "Identifiants invalides"
          }
        }
      }
    },
    "/auth/profile": {
      "get": {
        "summary": "Obtenir le profil utilisateur",
        "responses": {
          "200": {
            "description": "Détails du profil utilisateur"
          },
          "401": {
            "description": "Non autorisé"
          }
        }
      }
    }
  }
}
