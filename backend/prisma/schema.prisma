generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProjectStatus {
  EN_COURS
  TERMINÉ
  ANNULÉ
}

enum TaskStatus {
  PENDANT
  EN_COURS
  TERMINÉ
}

model User {
  id       Int       @id @default(autoincrement())
  username String
  email    String    @unique
  password String
  role     Role      @default(ETUDIANT)
  projects Project[] // Relation vers plusieurs projets
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  status      String
  userId      Int      // Changer ici pour que ce soit du type `Int`
  user        User     @relation(fields: [userId], references: [id]) // Relation vers l'utilisateur
  tasks       Task[]   // Relation vers plusieurs tâches
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String
  status      String
  dueDate     DateTime
  project     Project  @relation(fields: [projectId], references: [id])
  projectId   String
}

enum Role {
  ENCADRANT
  ETUDIANT
}
